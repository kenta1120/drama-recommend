<%= form_with model: drama, local: true do |f| %>
  <div class="form-element" >
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>
  </div>

  <div class="form-element" >
    <%= f.label :genre, "ジャンル" %>
    <%= f.select :genre, Drama::GENRES, { prompt: "選択してください" } %>
  </div>

  <div class="form-element" >
    <%= f.label :mood, "感情タグ" %>
    <%= f.select :mood, Drama::MOODS, {prompt: "選択してください" } %>
  </div>

  <div class="form-element" >
    <%= f.label :scene, "どんな時に見るのがオススメ？" %>
    <%= f.text_field :scene %>
  </div>

  <div class="form-element">
    <%= f.label :watched_on, "視聴日"%>
    <%= f.date_field :watched_on %>
  </div>

  <div class="form-element" >
    <%= f.label :description, "感想" %>
    <%= f.text_area :description %>
  </div>

  <div class="checkbox">
    <%= f.label :is_public, "公開する" %>
    <%= f.check_box :is_public %>
  </div>

  <div class="form-actions" >
    <%= f.submit "保存", class: "btn btn-primary" %>
    <%= link_to "一覧に戻る", dramas_path, class: "btn btn-secondary" %>
  </div>
<% end %>
